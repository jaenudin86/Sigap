<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sendbird_img_dashboard_red"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sendbird_background_02"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/sendbird_arrow_round_left_red"
                android:background="#00000000"
                android:layout_gravity="center|center_vertical"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,RtlHardcoded" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="55dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                tools:ignore="InefficientWeight,RtlHardcoded">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/sendbird_img_live_chat_128"
                        android:gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:id="@+id/label_img_title_live_chat"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/txt_channel_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10pt"
                        android:textStyle="normal"
                        android:textColor="#ffe100"
                        android:text=" Live Chat"
                        android:gravity="right|center_vertical"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </TableRow>

            </RelativeLayout>
            <!--
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/sendbird_btn_setting"
                android:background="#00000000"
                android:layout_gravity="center"
                />
            -->
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llChatForm"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="InefficientWeight">
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp"
                android:transcriptMode="normal"
                >
            </ListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/sendbird_img_shadow"
                />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            tools:ignore="ObsoleteLayoutParam">
            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c5c5c5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:background="@drawable/sendbird_chat_input_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ProgressBar
                        android:id="@+id/progress_btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        />

                    <ImageButton
                        android:id="@+id/btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sendbird_btn_upload"
                        android:background="#00000000"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etxt_message"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColorHint="#bbc3c9"
                    android:hint="Ketik pesan . . ."
                    android:textColor="#37434f"
                    android:textSize="5.75pt"
                    android:text=""
                    android:background="#00000000"
                    tools:ignore="Deprecated,HardcodedText" />
                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#ff444444"
                    android:text="Kirim"
                    android:background="@drawable/sendbird_btn_send"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

