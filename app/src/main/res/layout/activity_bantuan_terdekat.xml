<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bantuan_terdekat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_dashboard_red"
    android:fitsSystemWindows="true"
    tools:context="com.app.sigap.BantuanTerdekatActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_02"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:weightSum="1"/>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:layout_weight="1.25">
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/sendbird_arrow_round_left_red"
                android:background="#00000000"
                android:layout_gravity="center|center_vertical"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,RtlHardcoded" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                tools:ignore="InefficientWeight,RtlHardcoded">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/img_bantuan_terdekat"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:scaleType="fitXY"
                        android:id="@+id/label_img_pelayananpolres"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/txt_channel_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10pt"
                        android:textStyle="normal"
                        android:textColor="#ffe100"
                        android:text=" Bantuan Terdekat"
                        android:gravity="left|center_vertical"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </TableRow>

            </RelativeLayout>
            <!--
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/sendbird_btn_setting"
                android:background="#00000000"
                android:layout_gravity="center"
                />
            -->
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <!-- Polisi -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_bantuan_terdekat_polisi"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_bantuan_terdekat_polisi"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <TextView
                android:id="@+id/label_text_bantuan_terdekat_polisi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffe100"
                android:textSize="10pt"
                android:textStyle="normal"
                android:text="POLISI"
                android:gravity="center|center_vertical"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </TableRow>
        <!-- End of polisi -->

        <!-- Separator -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.00"
            tools:ignore="UselessLeaf" />
        <!-- End of separator -->

        <!-- Rumah sakit , label_img_bantuan_terdekat_rumah_sakit , label_text_bantuan_terdekat_rumah_sakit -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_bantuan_terdekat_rumah_sakit"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_bantuan_terdekat_rumah_sakit"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <TextView
                android:id="@+id/label_text_bantuan_terdekat_rumah_sakit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffe100"
                android:textSize="10pt"
                android:textStyle="normal"
                android:text="Rumah Sakit"
                android:gravity="center|center_vertical"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </TableRow>
        <!-- End of rumah sakit -->

        <!-- Separator -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.00"
            tools:ignore="UselessLeaf" />
        <!-- End of separator -->

        <!-- Pemadam kebakaran , label_img_bantuan_terdekat_pemadam_kebakaran , label_text_bantuan_terdekat_pemadam_kebakaran -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_bantuan_terdekat_pemadam_kebakaran"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_bantuan_terdekat_pemadam_kebakaran"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <TextView
                android:id="@+id/label_text_bantuan_terdekat_pemadam_kebakaran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffe100"
                android:textSize="10pt"
                android:textStyle="normal"
                android:text="Pemadam Kebakaran"
                android:gravity="center|center_vertical"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </TableRow>
        <!-- End of pemadam kebakaran -->

        <!-- Separator -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="0.00"
            tools:ignore="UselessLeaf" />
        <!-- End of separator -->

        <!-- SPBU , label_img_bantuan_terdekat_spbu , label_text_bantuan_terdekat_spbu -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_bantuan_terdekat_spbu"
                android:gravity="center|center_vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/label_img_bantuan_terdekat_spbu"
                android:layout_weight="0.00"
                tools:ignore="ContentDescription" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.00" >
            <TextView
                android:id="@+id/label_text_bantuan_terdekat_spbu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffe100"
                android:textSize="10pt"
                android:textStyle="normal"
                android:text="Pom Bensin"
                android:gravity="center|center_vertical"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </TableRow>
        <!-- End of spbu -->

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
