<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/back_white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!-- Kode Verifikasi -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Kode Verifikasi"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="33dp"
                android:id="@+id/label_kode_verifikasi"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <EditText
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:editable="false"
                android:enabled="false"
                android:ems="10"
                android:id="@+id/text_kode_verifikasi"
                android:hint=""
                android:layout_weight="1" />
        </TableRow>
        <!-- End of Kode Verifikasi -->

        <!-- Username -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Username"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="33dp"
                android:id="@+id/label_username"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <EditText
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/text_username"
                android:hint=""
                android:layout_weight="1" />
        </TableRow>
        <!-- End of Username -->

        <!-- Password -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Password"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="33dp"
                android:id="@+id/label_password"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <EditText
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:inputType="textPassword"
                android:text=""
                android:ems="10"
                android:id="@+id/text_password"
                android:hint=""
                android:layout_weight="1" />
        </TableRow>
        <!-- End of Password -->

        <!-- Repeat Password -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Ketik Ulang Password"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="33dp"
                android:id="@+id/label_repeat_password"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <EditText
                android:layout_marginStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:inputType="textPassword"
                android:text=""
                android:ems="10"
                android:id="@+id/text_repeat_password"
                android:hint=""
                android:layout_weight="1" />
        </TableRow>
        <!-- End of Repeat Password -->

        <!-- Button Submit -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Proses"
                android:layout_width="0dp"
                android:layout_marginStart="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="33dp"
                android:id="@+id/button_save"
                android:layout_weight="1" />

        </TableRow>
        <!-- End of Button Submit -->

    </TableLayout>

</RelativeLayout>